#include<stdio.h>
double myPow(double x, int n) {
    long exp = n;
    double result = 1.0;

if (exp < 0) {
        x = 1 / x;
        exp = -exp;
    }

    
    while (exp > 0) {
         
            result *= x;
        exp--;
    }

    return result;
}
int main() {
    double x = 2.00000;
    int n =-2 ;
    printf("pow(%.1f, %d) = %f\n", x, n, myPow(x, n));
}
